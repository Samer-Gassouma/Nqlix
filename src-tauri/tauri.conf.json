{
  "build": {
    "beforeDevCommand": "pnpm dev",
    "beforeBuildCommand": "pnpm build",
    "devPath": "http://localhost:1420",
    "distDir": "../dist",
    "withGlobalTauri": false
  },
  "package": {
    "productName": "Nqlix",
    "version": "0.0.8"
  },
  "tauri": {
    "allowlist": {
      "all": true,
      "http": {
        "all": true,
        "request": true,
        "scope": ["http://**", "https://**"]
      }
    },
    "bundle": {
      "active": true,
      "targets": ["msi", "nsis"],
      "identifier": "com.nqlix.desktop",
      "icon": [
        "icons/32x32.png",
        "icons/128x128.png",
        "icons/128x128@2x.png",
        "icons/icon.icns",
        "icons/icon.ico"
      ]
    },
    "updater": {
      "active": true,
      "dialog": true,
      "endpoints": [
        "https://api.github.com/repos/Samer-Gassouma/Nqlix/releases/latest"
      ],
      "pubkey": "dW50cnVzdGVkIGNvbW1lbnQ6IG1pbmlzaWduIHB1YmxpYyBrZXk6IDk2RTY1NUE2MTA1RkRFNUEKUldSYTNsOFFwbFhtbHE1Nm5pc1J5QStuQk5yN2pmVEorS2RSYUtTd3JWakJYTEdlTndHUFFYeVEK",
      "windows": {
        "installMode": "passive"
      }
    },
    "security": {
      "csp": "default-src blob: data: filesystem: ws: http: https: 'unsafe-eval' 'unsafe-inline';"
    },
    "windows": [
      {
        "fullscreen": false,
        "resizable": true,
        "title": "Nqlix",
        "height": 600,
        "width": 800
      }
    ]
  }
}