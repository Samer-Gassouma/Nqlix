{
  "$schema": "https://tauri.app/schema.json",
  "identifier": "com.nqlix.desktop",
  "productName": "Nqlix",
  "version": "0.0.0",
  "build": {
    "frontendDist": "../dist",
    "devUrl": "http://localhost:1420",
    "beforeDevCommand": "pnpm dev",
    "beforeBuildCommand": "pnpm build"
  },
  "app": {
    "windows": [
      {
        "fullscreen": false,
        "resizable": true,
        "title": "Nqlix",
        "width": 800,
        "height": 600
      }
    ],
    "security": {
      "csp": "default-src blob: data: filesystem: ws: http: https: 'unsafe-eval' 'unsafe-inline';"
    }
  },
  "bundle": {
    "active": true,
    "targets": ["msi", "nsis"],
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ]
  },
  "updater": {
    "active": true,
    "endpoints": [
      "https://github.com/Samer-Gassouma/Nqlix/releases/latest/download/latest.json"
    ],
    "dialog": true,
    "pubkey": "dW50cnVzdGVkIGNvbW1lbnQ6IG1pbmlzaWduIHB1YmxpYyBrZXk6IDc3NzdBQzY0ODhEQjlDRjYKUldUMm5OdUlaS3gzZHgzQWZjQnpvM2hXUXVqaHpTcFcrMlBhMUpsSkZYNjZNNGhnSmRtU0llZVQK"
  },
  "plugins": {
    "shell": {
      "open": true
    },
    "dialog": {
      "all": true
    },
    "fs": {
      "all": true
    },
    "http": {
      "all": true
    }
  }
}